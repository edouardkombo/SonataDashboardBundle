<style>
    .gadash-preloader {
        margin-left: 45%;
    }
</style>

<script type="text/javascript">

function initGoogleDashboard() {

	if( typeof(gadash) === 'undefined') {
		return;
	}

	gadash.onAuthorized = function()
	{
		$('.gadash-preloader').show();
	};
	
	gadash.onUnauthorized = function() {
		$('.gadash-container').css('visibility', 'hidden');
	};
	
	gadash.onSuccess = function() {
		$('.gadash-preloader').remove();
	};
		
	{% if statistics.visits %}
      visitInit();
	{% endif %}
}
</script>

{% include authTemplate %}
{% include 'GoogleBundle:Analytics:dashboard.html.twig' with {'initCallback' : 'initGoogleDashboard'} %}