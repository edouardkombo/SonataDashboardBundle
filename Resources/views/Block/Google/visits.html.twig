<div class="gadash-container visits well">
    <h3>{{ 'google_visits'|trans({}, 'SonataDashboardBundle') }}</h3>
    <div id="dataOverTimeConfig" class="stats-container"></div>
    <img src="{{ asset('/bundles/sonatadashboard/images/preloader.gif') }}" class="gadash-preloader" style="display:none;"/>
<div>

<script type="text/javascript">

function visitInit() {
    // Create new Chart.
    var dataOverTime = new gadash.Chart({
	    'last-n-days': {{ days }},
        'divContainer': 'dataOverTimeConfig',
        'type': 'LineChart',
        'query': {
          'dimensions': 'ga:date',
          'sort': 'ga:date',
          'metrics': 'ga:visitors, ga:visits, ga:pageviews',
          'ids' : gadash.tableId      
        },
        'chartOptions': {
            height: {{ height }},
            width: {{ width }},
            legend: {position: 'bottom'},
            hAxis: {title:'Date'},
            curveType: 'function'
        }
    }).render();
}

</script>